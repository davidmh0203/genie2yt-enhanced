{
  "name": "genie2yt-worker",
  "version": "1.0.0",
  "description": "Genie2YT Cloudflare Worker Backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create genie2yt-db",
    "db:migrate": "wrangler d1 execute genie2yt-db --file=../database/schema.sql",
    "db:migrate:local": "wrangler d1 execute genie2yt-db --local --file=../database/schema.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "wrangler": "^3.0.0",
    "typescript": "^5.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
